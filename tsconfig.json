{
	"compilerOptions": {
		"alwaysStrict": true,
		"baseUrl": ".",
		"declaration": true,
		"experimentalDecorators": true,
		"lib": ["dom", "ES2023"],
		"allowSyntheticDefaultImports": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "./dist/",
		"preserveConstEnums": true,
		"removeComments": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"target": "ES2020"
	}
}
